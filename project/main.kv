#:set main_color 0,0,0,1
#:set accent_color 1, 1, 0, 1
#:set color_a 218/255, 247/255, 166/255, 1
#:set color_b 255/255, 195/255, 0, 1
#:set color_c 255/255, 87/255, 51/255, 1
#:set color_d 199/255, 0, 57/255, 1
#:set color_e 144/255, 12/255, 63/255, 1
#:set color_f 88/255, 24,255, 69/255, 1


<Screen, ScreenManager>
    canvas.before:
        Color: 
            rgba: color_f
        Rectangle:
            size: self.size
            pos: self.pos

<ButtonGame@Button>
    canvas.before:
        Color: 
            rgba:color_d if self.state == 'normal' else color_c
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0,5,0,5]
        Color:
            rgba: accent_color if self.state == 'normal' else color_d
        BoxShadow:
            size: self.size
            pos: self.pos
            offset: 0,-2
            inset: True
            border_radius: 0,5,0,5
            blur_radius: 5 if self.state == 'normal' else 10
    size_hight_y: 0.5
    font_size: '20sp'
    font_name: 'assets/RubikScribble-Regular.ttf'
    backgroung_color: 0,0,0,0
    color: color_a
    backgroung_normal: ""
    backgroung_down: ''

<ButtonMenu@Button>
    canvas.before:
        Color: 
            rgba:color_d if self.state == 'normal' else color_c
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0,50,0,50]
        Color:
            rgba: accent_color if self.state == 'normal' else color_d
        BoxShadow:
            size: self.size
            pos: self.pos
            offset: 0,-5
            inset: True
            border_radius: 0,50,0,50
            blur_radius: 10 if self.state == 'normal' else 20
    size_hight_y: 0.25
    font_size: '30sp'
    font_name: 'assets/RubikScribble-Regular.ttf'
    backgroung_color: 0,0,0,0
    color: color_a
    backgroung_normal: ""
    backgroung_down: ''





<MenuScreen>:
        
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label: 
            id: title_game
            text: "Pirates' Treasures"
            font_name: 'assets/RubikScribble-Regular'
            font_size: '30sp'
            size_hight_y: 0.2
            color: 'red'


        Image:
            source: 'assets/img/pirats.webp'
            size_hight_y: 0.3
            allow_stretch: True

        Widget:
            size_hight_y: 0.05

        ButtonMenu:
            text: "Settings"

        ButtonMenu:
            text: "Play"
            on_press: root.manager.current = 'game'

<GameScreen>:
    id: game
    BoxLayout:
        orientation: 'vertical'
        BoxLayout
            size_hight_y: 0.1
            Label:
                text: 'score: '+ str(int(root.points))
                font_name: 'assets/RubikScribble-Regular'
                font_size: '40sp'
                color: color_a
        FloatLayout:

            size_hight_y: 0.8
            Planet:
                id: planet

        BoxLayout:

            ButtonGame:
                text: '\uE08A'
                on_press:
                    root.manager.current = 'menu'
                    app.save_prog()
            Widget:
                size_hight_y: 0.05
                spacing: '20dp'
            ButtonGame:
                text: '\uE0DC'
            Widget:
                size_hight_y: 0.05
                spacing: '20dp'
            ButtonGame:
                text: '\uE0E0'
                

<Planet>:
    allow_stretch: True
    size_hight: None, None 
    center: self.parent.center
    size: '200dp','200dp'
    source: 'assets/img/Crying-Cat-Memes-PNG-3159668287.png'